# Echoes-of-Deceit Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ===== LLM API Configuration =====

# Qwen API (Dashscope/Alibaba Cloud)
QWEN_API_KEY=your-qwen-api-key-here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_REMOTE_HOST=http://10.254.101.186:11434

# ===== Model Configuration =====

# Default models to use
DEFAULT_DM_MODEL=qwen3-max
DEFAULT_PLAYER_MODEL=qwen3-max
DEFAULT_JUDGE_MODEL=qwen3:0.6b
DEFAULT_EMBEDDING_MODEL=qwen3-embedding:4b

# ===== Qdrant Configuration =====
QDRANT_HOST=192.168.100.181
QDRANT_PORT=6333

# ===== Game Configuration =====
GAME_STORAGE_DIR=demo/rag_storage
GAME_DATA_DIR=data/situation_puzzles
MEMORY_STORAGE_DIR=demo/agents_memory

# ===== Debug Configuration =====
DEBUG_LOG_DIR=debug_logs
LOG_LEVEL=INFO
